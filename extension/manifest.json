{
    "manifest_version": 3,
    "name": "atcoder-tools-mini Extension",
    "version": "1.0.0",
    "description": "Chrome extension for automated submission to AtCoder from local CLI.",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "tabs",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://atcoder.jp/contests/*"
            ],
            "js": [
                "content/dropdown-modify.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
        "https://atcoder.jp/*"
    ]
}